<% provide(:title, @user.name) %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
      	<% if profile_image_for @user %>
	        <%= profile_image_for @user%>
	    <% else %>
	        <%= gravatar_for @user %>
	    <% end %>
	        
	    <%= @user.name %>
       
      </h1>
    </section>
  </aside>
  
  
  <% @user.posts.each do |post|%>
  <%= post.title%><%= post.price%>
  <%end%>
 
</div>